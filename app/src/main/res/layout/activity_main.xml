<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

    <FrameLayout
        android:id="@+id/framLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.example.lk_etch_robot.util.usbfpv.GLHttpVideoSurface
                android:id="@+id/fPVVideoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:gravity="top"
                android:padding="0dp"
                android:layout_marginRight="35dp"
                tools:ignore="MissingConstraints" />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:background="@color/dialog_color">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                <com.example.lk_etch_robot.view.BaseTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:drawer_image_left="@drawable/ic_light"
                        app:tv_title="照明:" />

                <TextView
                        android:id="@+id/tvLightState"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="11dp"
                        android:textColor="@color/red"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                <com.example.lk_etch_robot.view.BaseTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:drawer_image_left="@drawable/ic_lifting"
                        app:tv_title="升降:" />
                <TextView
                        android:id="@+id/tvLiftingState"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="11dp"
                        android:textColor="@color/red"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                <com.example.lk_etch_robot.view.BaseTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:drawer_image_left="@drawable/ic_current_supply"
                        app:tv_title="电源:" />

                <TextView
                        android:id="@+id/tvCurrentSupply"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="11dp"
                        android:textColor="@color/red"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                <com.example.lk_etch_robot.view.BaseTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:drawer_image_left="@drawable/ic_current"
                        app:tv_title="电流:" />
                <TextView
                        android:id="@+id/tvCurrent"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="11dp"
                        android:textColor="@color/red"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                <com.example.lk_etch_robot.view.BaseTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:drawer_image_left="@drawable/ic_main_elect"
                        app:tv_title="主电:" />

                <TextView
                        android:id="@+id/tvMainElectQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="11dp"
                        android:textColor="@color/red"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                <com.example.lk_etch_robot.view.BaseTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:drawer_image_left="@drawable/ic_elect"
                        app:tv_title="备电:" />
                <TextView
                        android:id="@+id/tvElectQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="11dp"
                        android:textColor="@color/red"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                <com.example.lk_etch_robot.view.BaseTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:drawer_image_left="@drawable/ic_distance"
                        app:tv_title="距离:" />

                <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="11dp"
                        android:textColor="@color/red" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


<!--    <com.example.lk_etch_robot.view.HeightView-->
<!--            android:id="@+id/heightView"-->
<!--            android:layout_width="25dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_marginTop="68dp"-->
<!--            android:layout_gravity="left"/>-->
    
    <FrameLayout
            android:layout_width="15dp"
            android:layout_height="305dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="5dp">
        <ImageView
                android:id="@+id/ivHeight"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:scaleType="fitXY"
                android:src="@drawable/ic_height"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_scale"
                android:scaleType="fitXY"/>
    </FrameLayout>

    <TextView
            android:id="@+id/tvHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:textColor="@color/red"
            android:gravity="center"
            android:ems="1"
            android:text="抬升高度0"
            android:textSize="14dp"
            android:layout_marginLeft="23dp" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/ivMenu"
                android:layout_width="28dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:src="@drawable/ic_menu" />

        <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@color/dialog_color"
                android:orientation="vertical"
                android:visibility="gone">

            <com.example.lk_etch_robot.view.BaseButton
                    android:id="@+id/rbCamera"
                    style="@style/MainRadionButton"
                    android:drawableTop="@drawable/ic_camera"
                    android:drawableTintMode="screen"
                    android:text="截图"
                    android:textColor="@color/whith"
                    android:textSize="11dp"
                    app:bg_color="@color/none_color" />

            <com.example.lk_etch_robot.view.BaseButton
                    android:id="@+id/rbVideo"
                    style="@style/MainRadionButton"
                    android:drawableTop="@drawable/ic_video"
                    android:text="录像"
                    android:textColor="@color/whith"
                    android:textSize="11dp"
                    app:bg_color="@color/none_color" />

            <com.example.lk_etch_robot.view.BaseButton
                    android:id="@+id/rbVideoClose"
                    style="@style/MainRadionButton"
                    android:drawableTop="@drawable/ic_video_close"
                    android:text="录像"
                    android:textColor="@color/whith"
                    android:textSize="11dp"
                    android:visibility="gone"
                    app:bg_color="@color/none_color" />

            <com.example.lk_etch_robot.view.BaseButton
                    android:id="@+id/rbAlbum"
                    style="@style/MainRadionButton"
                    android:drawableTop="@drawable/ic_file"
                    android:text="文件夹"
                    android:textColor="@color/whith"
                    android:textSize="11dp"
                    app:bg_color="@color/none_color" />

            <com.example.lk_etch_robot.view.BaseButton
                    android:id="@+id/rbSetting"
                    style="@style/MainRadionButton"
                    android:drawableTop="@drawable/ic_setting"
                    android:text="设置"
                    android:textColor="@color/whith"
                    android:textSize="11dp"
                    app:bg_color="@color/none_color" />
            <com.example.lk_etch_robot.view.BaseButton
                    android:id="@+id/rbHelp"
                    style="@style/MainRadionButton"
                    android:drawableTop="@drawable/ic_help"
                    android:text="帮助"
                    android:textColor="@color/whith"
                    android:textSize="11dp"
                    app:bg_color="@color/none_color" />

            <com.example.lk_etch_robot.view.BaseButton
                    android:id="@+id/rbBack"
                    style="@style/MainRadionButton"
                    android:drawableTop="@drawable/ic_small1"
                    android:text="最小化"
                    android:textColor="@color/whith"
                    android:textSize="11dp"
                    app:bg_color="@color/none_color" />

        </RadioGroup>
    </LinearLayout>
</FrameLayout>